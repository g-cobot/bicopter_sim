<launch>
  
  <arg name="model" default="$(find bicopter_sim)/bicopter_description/urdf/bicopter_assembly.xacro"/>
  <arg name="rvizconfig" default="$(find bicopter_sim)/bicopter_description/rviz/urdf.rviz" />
  
  <include file="$(find bicopter_sim)/bicopter_description/launch/gazebo_disp.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Visualisation RVIZ -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
            
</launch>